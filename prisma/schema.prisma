// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Int      // store price in KES (integer)
  unit        String   // e.g. "kg", "crate", "bag"
  quantity    Int
  category    String?
  location    String
  imageUrl    String?
  sellerEmail String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      Order[]
}

model Order {
  id           String   @id @default(cuid())
  buyerName    String
  buyerEmail   String
  buyerPhone   String?
  message      String
  productId    String
  product      Product  @relation(fields: [productId], references: [id])
  createdAt    DateTime @default(now())
}